<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    tools:context=".Controller.RegistrationActivity">

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"/>
        <TextView
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radhey Radhey Ji"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_margin="20dp"
            android:fontFamily="@font/roboto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your credentials below to Sign Up"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#8B8B93"/>
        <EditText
            android:id="@+id/registration_mobile_number"
            android:layout_margin="20dp"
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:drawablePadding="7dp"
            android:drawableStart="@drawable/ic_call"
            android:layout_width="match_parent"
            android:hint="Mobile Number"
            android:layout_height="40dp"
            android:background="@drawable/edittextdesign"/>
        <EditText
            android:id="@+id/registration_password"
            android:layout_margin="20dp"
            android:inputType="textPassword"
            android:maxLength="30"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:drawablePadding="7dp"
            android:drawableStart="@drawable/ic_password"
            android:layout_width="match_parent"
            android:hint="Password"
            android:layout_height="40dp"
            android:background="@drawable/edittextdesign"/>
        <EditText
            android:id="@+id/registration_conf_password"
            android:layout_margin="20dp"
            android:inputType="textPassword"
            android:maxLength="30"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:drawablePadding="7dp"
            android:drawableStart="@drawable/ic_password"
            android:layout_width="match_parent"
            android:hint="Confirm Password"
            android:layout_height="40dp"
            android:background="@drawable/edittextdesign"/>
        <Button
            android:id="@+id/registration_btn"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:textSize="42px"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radhey Radhey"
            android:background="@drawable/buttondesign"/>
    </LinearLayout>
</ScrollView>